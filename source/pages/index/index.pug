  section.plans
    .plans__wrap
      h2(class="plans__title", aria-hidden="true") Plans
      - var plansList = [{name: "solo", title: "Go it solo", descr: "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco", flag: "legacy", price: "$9", platforms: ["Apple", "Windows"]},     {name: "team", title: "Team plan", descr: "Dui faucibus in ornare quam viverra orci sagittis. Viverra maecenas accumsan lacus vel facilisis volutpat. Ac turpis egestas integer eget aliquet nibh praesent tristique. Neque volutpat ac tincidunt vitae semper quis lectus nulla. Tortor at risus viverra adipiscing at in tellus.", flag: "popular", price: "$18", platforms: ["Apple", "Windows", "Android"]}]
      
      mixin plan-item(plan)
        li(class="plans__item plans__item--"+plan.name)
          case plan.flag
            when "legacy"
              span.plans__item-flag.plans__item-flag--legacy Legacy
            when "popular"
              span.plans__item-flag.plans__item-flag--popular Most popular
          h3.plans__item-title= plan.title
          p.plans__item-descr= plan.descr
          a(href="#", class="plans__item-btn")= "Buy now " + plan.price
          ul.plans__platforms
            each platform in plan.platforms
              li(class="plans__platforms-item plans__platforms-item--"+platform.toLowerCase())= platform
      
      ul.plans__list
        each plan in plansList
          +plan-item(plan)